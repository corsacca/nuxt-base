# Environment Variables for Projects Using This Layer
# Copy this file to your consuming project and rename it to .env
# Fill in the values according to your environment

# Application Configuration
APP_TITLE=Base

# JWT Secret (use a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# SMTP Configuration (for email sending)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=
SMTP_REJECT_UNAUTHORIZED=true

# S3 Storage Configuration (AWS or compatible service)
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET_NAME=your-bucket-name

# Public Configuration
NODE_ENV=development
NUXT_PUBLIC_SITE_URL=http://localhost:3000
