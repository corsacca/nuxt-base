# Environment Variables for Projects Using This Layer
# Copy this file to your consuming project and rename it to .env
# Fill in the values according to your environment

# Application Configuration
APP_TITLE=Base

# JWT Secret (use a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Email Configuration
# Common settings (used by all providers)
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=Prayer Tools

# Provider selection: 'smtp' (default), 'mailgun', or 'ses'
# Use 'mailgun' or 'ses' on platforms that block outbound SMTP (e.g., Railway free tier)
EMAIL_PROVIDER=smtp

# SMTP Configuration (when EMAIL_PROVIDER=smtp or omitted)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
SMTP_REJECT_UNAUTHORIZED=true

# Mailgun Configuration (when EMAIL_PROVIDER=mailgun)
# Uses HTTP API - bypasses SMTP port restrictions
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
# Optional: Use 'api.eu.mailgun.net' for EU region
MAILGUN_HOST=

# AWS SES Configuration (when EMAIL_PROVIDER=ses)
# Uses AWS SDK - bypasses SMTP port restrictions
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3 Storage Configuration (AWS or compatible service)
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET_NAME=your-bucket-name

# Public Configuration
NODE_ENV=development
NUXT_PUBLIC_SITE_URL=http://localhost:3000
