{
  "name": "@corsacca/nuxt-base-layer",
  "version": "1.5.0",
  "description": "Base Nuxt layer with authentication, theme system, and common utilities",
  "type": "module",
  "private": true,
  "license": "MIT",
  "scripts": {
    "migrate": "node scripts/migrate.mjs",
    "build": "npm run migrate && nuxt build",
    "dev": "npm run migrate && nuxt dev",
    "dev:mail": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "mailhog:start": "echo 'ℹ Using shared MailHog from sale/nuxtui project at http://localhost:8025'",
    "mailhog:stop": "echo 'ℹ MailHog is shared with sale/nuxtui project - use that project to stop it'",
    "mailhog:logs": "docker logs nuxtui-mailhog",
    "mailhog:open": "open http://localhost:8025"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.914.0",
    "@aws-sdk/client-ses": "^3.955.0",
    "@aws-sdk/s3-request-presigner": "^3.914.0",
    "@iconify-json/lucide": "^1.2.79",
    "@nuxt/ui": "^4.0.1",
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "nodemailer-mailgun-transport": "^2.1.5",
    "nuxt": "^4.2.2",
    "postgres": "^3.4.7",
    "uuid": "^12.0.0",
    "vue": "^3.5.20",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@nuxt/test-utils": "^3.21.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.1",
    "@types/nodemailer-mailgun-transport": "^1.4.6",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "happy-dom": "^20.0.11",
    "playwright-core": "^1.57.0",
    "tailwindcss": "^4.1.15",
    "vitest": "^3.2.4"
  }
